<UserControl x:Class="Accidis.Apps.Preflight.Views.Main.LlfControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="480" 
             d:DesignWidth="480">

	<Grid>
		<StackPanel>
			<Grid Height="400">
				<Grid.ColumnDefinitions>
					<ColumnDefinition />
				</Grid.ColumnDefinitions>
				<Grid.RowDefinitions>
					<RowDefinition />
					<RowDefinition />
					<RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
				<Button Click="OnAreaCClicked" Grid.Row="0">
					Sweden area C (North)
				</Button>
				<Button Click="OnAreaBClicked" Grid.Row="1">
                    Sweden area B (Mid)
                </Button>
				<Button Click="OnAreaAClicked" Grid.Row="2">
					Sweden area A (South)
				</Button>
                <Button Click="OnAreaEClicked" Grid.Row="3">
                    Sweden area E (Southwest)
                </Button>
            </Grid>
		</StackPanel>
	</Grid>
</UserControl>